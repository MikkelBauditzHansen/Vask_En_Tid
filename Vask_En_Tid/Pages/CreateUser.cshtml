@page
@model Vask_En_Tid.Pages.CreateUserModel
@{
    ViewData["Title"] = "Opret beboer";
}

<h2>Opret ny beboerprofil</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="font-weight:bold; color:@(Model.Message.Contains("Fejl") ? "red" : "green")">
        @Model.Message
    </div>
}

<form method="post" style="width:50%; margin-top:20px;">
    <div class="form-group">
        <label for="ResidentName">Navn:</label>
        <input asp-for="Resident.ResidentName" class="form-control" placeholder="Fx Lars Larsen" required />
    </div>

    <div class="form-group">
        <label for="City">By:</label>
        <input asp-for="Resident.City" class="form-control" placeholder="Fx Roskilde" required />
    </div>

    <div class="form-group">
        <label for="PostNr">Postnummer:</label>
        <input asp-for="Resident.PostNr" class="form-control" placeholder="Fx 4000" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Telefonnummer:</label>
        <input asp-for="Resident.PhoneNumber" class="form-control" placeholder="Fx 12345678" required />
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input asp-for="Resident.Email" class="form-control" placeholder="Fx mail@eksempel.dk" required />
    </div>

    <div class="form-group">
        <label for="ApartmentNr">Lejlighedsnummer:</label>
        <input asp-for="Resident.ApartmentNr" class="form-control" placeholder="Fx 0.A" required />
        <small class="form-text text-muted">Format: fx 0.A for stuen, 1.B for 1. sal</small>
    </div>

    <div class="form-group">
        <label for="FloorNr">Etagenummer:</label>
        <input asp-for="Resident.FloorNr" type="number" class="form-control" placeholder="Fx 0 for stuen, 1 for 1. sal" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Gem beboer</button>
</form>
