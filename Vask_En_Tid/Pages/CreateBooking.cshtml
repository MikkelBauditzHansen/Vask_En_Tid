@page
@model Vask_En_Tid.Pages.CreateBookingModel
@{
    ViewData["Title"] = "Opret booking";
}

<h2>Opret ny booking</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="font-weight:bold;">@Model.Message</p>
}

<form method="post" style="width:50%;">
    <div style="margin-bottom:10px;">
        <label for="ResidentID">Vælg beboer:</label><br />
        <select asp-for="NewBooking.ResidentID" id="ResidentID" required>
            <option value="">-- Vælg beboer --</option>
            @foreach (var r in Model.Residents)
            {
                <option value="@r.ResidentID">@r.ResidentName (Lejlighed @r.ApartmentNr)</option>
            }
        </select>
    </div>

    <div style="margin-bottom:10px;">
        <label for="MachineID">Vælg maskine:</label><br />
        <select asp-for="NewBooking.MachineID" id="MachineID" required>
            <option value="">-- Vælg maskine --</option>
            @foreach (var m in Model.Machines)
            {
                <option value="@m.MachineID">@m.MachineName (@m.MachineType)</option>
            }
        </select>
    </div>

    <div style="margin-bottom:10px;">
        <label for="BookingDate">Dato:</label><br />
        <input asp-for="NewBooking.BookingDate" type="date" id="BookingDate" required />
    </div>

    <div style="margin-bottom:10px;">
        <label for="TimeSlot">Tidsrum:</label><br />
        <select asp-for="NewBooking.TimeSlot" id="TimeSlot" required>
            <option value="Morning">Morgen (08-10)</option>
            <option value="Afternoon">Eftermiddag (12-14)</option>
            <option value="Evening">Aften (16-18)</option>
            <option value="Night">Nat (20-22)</option>
        </select>
    </div>

    <button type="submit">Book tid</button>
</form>
