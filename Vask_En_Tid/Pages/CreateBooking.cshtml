@page
@model Vask_En_Tid.Pages.CreateBookingModel
@{
    ViewData["Title"] = "Opret booking";
}

<h2>Vasketids-bookinger</h2>

<!-- Besked til brugeren -->
@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="font-weight:bold;">@Model.Message</p>
}

<!-- Liste over eksisterende bookinger -->
<table class="table table-bordered" style="width:60%; margin-bottom:20px;">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Beboer ID</th>
            <th>Maskine ID</th>
            <th>Dato</th>
            <th>Tidsrum</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Bookings != null && Model.Bookings.Count > 0)
        {
            foreach (var booking in Model.Bookings)
            {
                <tr>
                    
                    <td>@booking.BookingID</td>
                    <td>@booking.ResidentID</td>
                    <td>@booking.MachineID</td>
                    <td>@booking.BookingDate.ToString("dd-MM-yyyy")</td>
                    <td>@booking.TimeSlot</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" class="d-inline">
                            <input type="hidden" name="bookingID" value="@booking.BookingID" />
                            <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="text-align:center;">Ingen bookinger fundet</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- Formular til at oprette en ny booking -->
<h3>Opret ny booking</h3>

<form method="post" style="width:50%;">
    <div style="margin-bottom:10px;">
        <label for="ResidentID">Beboer ID:</label><br />
        <input asp-for="NewBooking.ResidentID" type="number" id="ResidentID" required />
    </div>

    <div style="margin-bottom:10px;">
        <label for="MachineID">Maskine ID:</label><br />
        <input asp-for="NewBooking.MachineID" type="number" id="MachineID" required />
    </div>

    <div style="margin-bottom:10px;">
        <label for="BookingDate">Dato:</label><br />
        <input asp-for="NewBooking.BookingDate" type="date" id="BookingDate" required />
    </div>

    <div style="margin-bottom:10px;">
        <label for="TimeSlot">Tidsrum:</label><br />
        <select asp-for="NewBooking.TimeSlot" id="TimeSlot">
            <option value="Morning">Morgen (08-10)</option>
            <option value="Afternoon">Eftermiddag (12-14)</option>
            <option value="Evening">Aften (16-18)</option>
            <option value="Night">Nat (20-22)</option>
        </select>
    </div>

    <button type="submit">Book tid</button>
</form>
